{
  "manifest_version": 3,
  "name": "Exention Finder",
  "version": "1.2.0",
  "description": "Monitors a target page for keywords, highlights matches, and plays a sound alert.",
  "action": {
    "default_title": "Exention Finder",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
